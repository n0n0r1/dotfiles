// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
    // ========================================================================
    // デフォルト設定の無効化
    // ========================================================================
    {
        "key": "ctrl+alt+enter",
        "command": "-editor.action.replaceAll",
        "when": "editorFocus && findWidgetVisible"
    },
    {
        "key": "ctrl+shift+1",
        "command": "-search.action.replaceAllInFile",
        "when": "fileMatchFocus && replaceActive && searchViewletVisible"
    },
    {
        "key": "ctrl+shift+enter",
        "command": "-search.action.replaceAllInFile",
        "when": "fileMatchFocus && replaceActive && searchViewletVisible"
    },
    {
        "key": "ctrl+shift+1",
        "command": "-editor.action.replaceOne",
        "when": "editorFocus && findWidgetVisible"
    },
    {
        "key": "ctrl+alt+enter",
        "command": "-search.action.replaceAll",
        "when": "replaceActive && searchViewletVisible && !findWidgetVisible"
    },
    {
        "key": "ctrl+shift+1",
        "command": "-search.action.replace",
        "when": "matchFocus && replaceActive && searchViewletVisible"
    },
    {
        "key": "ctrl+y",
        "command": "-redo",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+s",
        "command": "-workbench.action.files.save"
    },
    {
        "key": "ctrl+shift+c",
        "command": "-workbench.action.terminal.openNativeConsole",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+j",
        "command": "-workbench.action.togglePanel"
    },
    {
        "key": "ctrl+shift+b",
        "command": "-workbench.action.tasks.build"
    },
    {
        "key": "f3",
        "command": "-editor.action.nextMatchFindAction",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+e",
        "command": "-workbench.action.quickOpenNavigateNextInFilePicker",
        "when": "inFilesPicker && inQuickOpen"
    },
    {
        "key": "ctrl+e",
        "command": "-workbench.action.quickOpen"
    },
    {
        "key": "ctrl+shift+e",
        "command": "-workbench.action.quickOpenNavigatePreviousInFilePicker",
        "when": "inFilesPicker && inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "-workbench.action.quickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "-workbench.action.quickOpenNavigateNextInFilePicker",
        "when": "inFilesPicker && inQuickOpen"
    },
    {
        "key": "ctrl+shift+p",
        "command": "-workbench.action.quickOpenNavigatePreviousInFilePicker",
        "when": "inFilesPicker && inQuickOpen"
    },
    {
        "key": "shift+f4",
        "command": "-search.action.focusPreviousSearchResult",
        "when": "hasSearchResult"
    },
    {
        "key": "ctrl+k m",
        "command": "-workbench.action.editor.changeLanguageMode"
    },
    {
        "key": "ctrl+shift+h",
        "command": "-workbench.action.replaceInFiles"
    },
    {
        "key": "ctrl+o",
        "command": "-workbench.action.files.openFile"
    },
    {
        "key": "ctrl+space",
        "command": "-editor.action.triggerSuggest",
        "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+space",
        "command": "-toggleSuggestionDetails",
        "when": "suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+n",
        "command": "-workbench.action.files.newUntitledFile"
    },
    {
        "key": "ctrl+h",
        "command": "-editor.action.startFindReplaceAction"
    },
    {
        "key": "ctrl+l",
        "command": "-expandLineSelection",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+t",
        "command": "-workbench.action.showAllSymbols"
    },

    // ========================================================================
    // 独自設定
    // ========================================================================
    // インテリセンス
    // {
    //     "key": "shift+space",
    //     "command": "editor.action.triggerSuggest",
    //     "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && vim.mode == 'Insert'"
    // },
    // {
    //     "key": "shift+space",
    //     "command": "toggleSuggestionDetails",
    //     "when": "suggestWidgetVisible && textInputFocus && vim.mode == 'Insert'"
    // },
    {
        "key": "ctrl+n",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+p",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+l",
        "command": "acceptSelectedSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    // -------------------------------------------------------------------------
    // 移動系
    // -------------------------------------------------------------------------
    // <C-h>
    {
        "key": "ctrl+h",
        "command": "cursorLeft",
        "when": "editorFocus && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.previousEditor",
        "when": "editorFocus && vim.mode == 'Normal' || inSettingsSearch || inSettingsEditor || inKeybindings"
    },
    {
        "key": "ctrl+shift+h",
        "command": "deleteLeft",
        "when": "editorFocus && !editorReadonly && vim.mode == 'Insert'"
    },
    // {
    //     "key": "ctrl+h",
    //     "command": "workbench.action.previousPanelView",
    //     "when": "panelFocus"
    // },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "sideBarFocus"
    },
    // <C-l>
    {
        "key": "ctrl+l",
        "command": "cursorRight",
        "when": "editorFocus && vim.mode == 'Insert' && !suggestWidgetVisible"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.nextEditor",
        "when": "editorFocus && vim.mode == 'Normal' || inSettingsSearch || inSettingsEditor || inKeybindings"
    },
    {
        "key": "ctrl+shift+l",
        "command": "deleteRight",
        "when": "editorFocus && !editorReadonly && vim.mode == 'Insert'"
    },
    // {
    //     "key": "ctrl+l",
    //     "command": "workbench.action.nextPanelView",
    //     "when": "panelFocus"
    // },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "sideBarFocus"
    },
    // <C-j>
    {
        "key": "ctrl+j",
        "command": "cursorDown",
        "when": "editorFocus && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.nextSideBarView",
        "when": "sideBarVisible && vim.mode != 'Insert'"
    },
    // <C-k>
    {
        "key": "ctrl+k",
        "command": "cursorUp",
        "when": "editorFocus && vim.mode == 'Insert' || terminalFocus"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.previousSideBarView",
        "when": "sideBarVisible && vim.mode != 'Insert'"
    },
    // <C-n>
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    // <C-p>
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },

    // ========================================================================
    // ウィンドウ操作
    // ========================================================================

    // {
    //     "key": "ctrl+w s",
    //     "command": "workbench.action.splitEditor",
    //     "when": "editorFocus && vim.mode == 'Normal'"
    // },
    // {
    //     "key": "ctrl+w v",
    //     "command": "workbench.action.splitEditorOrthogonal",
    //     "when": "editorFocus && vim.mode == 'Normal'"
    // },
    // {
    //     "key": "ctrl+w s",
    //     "command": "workbench.action.terminal.split",
    //     "when": "terminalFocus"
    // },
    // {
    //     "key": "ctrl+w h",
    //     "command": "workbench.action.terminal.focusPreviousPane",
    //     "when": "terminalFocus"
    // },
    // {
    //     "key": "ctrl+w l",
    //     "command": "workbench.action.terminal.focusNextPane",
    //     "when": "terminalFocus"
    // },
    // -------------------------------------------------------------------------
    // 検索系
    // -------------------------------------------------------------------------
    {
        "key": "n",
        "command": "search.action.focusNextSearchResult",
        "when": "hasSearchResult && editorFocus && vim.mode == 'Normal'"
    },
    {
        "key": "N",
        "command": "search.action.focusPreviousSearchResult",
        "when": "hasSearchResult && editorFocus && vim.mode == 'Normal'"
    },
    {
        "key": "shift+n",
        "command": "search.action.focusPreviousSearchResult",
        "when": "hasSearchResult && editorFocus && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+n",
        "command": "editor.action.nextMatchFindAction",
        "when": "!hasSearchResult && editorFocus && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+p",
        "command": "search.action.focusPreviousSearchResult",
        "when": "hasSearchResult && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+p",
        "command": "editor.action.previousMatchFindAction",
        "when": "!hasSearchResult && editorFocus && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+s",
        "command": "editor.action.startFindReplaceAction",
        "when": "!searchViewletFocus"
    },
    {
        "key": "ctrl+s",
        "command": "workbench.action.replaceInFiles",
        "when": "searchViewletFocus"
    },
    {
        "key": "ctrl+y",
        "command": "search.action.replace",
        "when": "replaceActive && searchViewletVisible && !findWidgetVisible"
    },
    {
        "key": "ctrl+y",
        "command": "editor.action.replaceOne",
        "when": "editorFocus && findWidgetVisible"
    },
    {
        "key": "ctrl+a",
        "command": "search.action.replaceAll",
        "when": "replaceActive && searchViewletFocus && !findWidgetVisible"
    },
    {
        "key": "ctrl+a",
        "command": "editor.action.replaceAll",
        "when": "editorFocus && findWidgetVisible"
    },
    {
        "key": "ctrl+a",
        "command": "search.action.replaceAllInFile",
        "when": "fileMatchFocus && replaceActive && searchViewletVisible"
    },
    {
        "key": "ctrl+shift+a",
        "command": "search.action.replaceAllInFolder",
        "when": "fileMatchFocus && replaceActive && searchViewletVisible"
    },
    // -------------------------------------------------------------------------
    // ctrl+;
    // -------------------------------------------------------------------------
    {
        "key": "ctrl+;",
        "command": "workbench.action.closeQuickOpen",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+;",
        "command": "closeFindWidget",
        "when": "editorFocus && findWidgetVisible"
    },
    {
        "key": "ctrl+;",
        "command": "search.action.clearSearchResults",
        "when": "hasSearchResult && !findWidgetVisible && searchViewletFocus"
    },
    {
        "key": "ctrl+;",
        "command": "extension.vim_escape",
        "when": "editorFocus && !findWidgetVisible && !inQuickOpen"
    },
    {
        "key": "ctrl+;",
        "command": "workbench.action.showCommands",
        "when": "vim.mode != 'Insert' && !inQuickOpen && !findWidgetVisible && !searchViewletFocus"
    },
    // -------------------------------------------------------------------------
    // 編集系
    // -------------------------------------------------------------------------
    {
        "key": "Shift+Enter",
        "command": "editor.action.insertLineBefore",
        "when": "editorFocus && vim.mode == 'Normal' && !renameInputVisible && !findWidgetVisible"
    },
    {
        "key": "Enter",
        "command": "editor.action.insertLineAfter",
        "when": "editorFocus && vim.mode == 'Normal' && !renameInputVisible && !findWidgetVisible"
    },
    // -------------------------------------------------------------------------
    // パネル
    // -------------------------------------------------------------------------
    // {
    //     "key": "ctrl+g",
    //     "command": "workbench.action.togglePanel"
    // },
    {
        "key": "ctrl+t",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "ctrl+b",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "!sideBarVisible || sideBarFocus"
    },
    {
        "key": "ctrl+b",
        "command": "workbench.action.focusSideBar",
        "when": "sideBarVisible && !sideBarFocus"
    },
]
